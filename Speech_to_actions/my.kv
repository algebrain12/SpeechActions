<CustomBar>:
    orientation:'horizontal'

<Customviewer>:
    orientation:'vertical'

<MyBox>:
    orientation: 'vertical'
    Label:
        text:"SpeechActions"
        size_hint: 1,0.2
    CustomBar:
        id: spite
        orientation:'horizontal'
        size_hint: 1,0.2
        TextInput:
            id: input_box
            hint_text: "Type the phrase here (try to make it a single word with less syllables)"

        Button:
            text: "Add Association"
            on_press: root.print_text()
        
        Spinner:
            id: spinner_id
            text: "Select"
            values: ["up-key","down-key","window-key","sound-mute"]  # Options
            pos_hint: {'center_x': 0.5, 'top': 1}
            on_text: root.spinner_clicked(self.text)
    Customviewer:
        id: hintbox
        size_hint:1,0.6
    

    